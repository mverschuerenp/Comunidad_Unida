<%- include('../templates/head.ejs', {titleWeb: 'Comunidad Unida' }) %>
    <header>
        <%- include("../templates/navbar.ejs", {brandText: 'Comunidad Unida' }) %>
    </header>
    <script>
        function validateForm() {
            var nombre = document.forms["reservar"]["nombre"].value;
            var depto = document.forms["reservar"]["depto"].value;
            var espacio = document.forms["reservar"]["espacio"].value;
            var dia = document.forms["reservar"]["dia"].value;
            var hora = document.forms["reservar"]["hora"].value;
            var nhoras = document.forms["reservar"]["nhoras"].value;
            if (nombre == "") {
                alert("Por favor ingrese su nombre.");
                return false;
            }
            if (depto == "") {
                alert("Por favor ingrese el numero de su departamento");
                return false;
            }
            if (espacio == "") {
                alert("Por favor seleccione un espacio para reservar.");
                return false;
            }
            if (dia == "") {
                alert("Por favor seleccione un dia.");
                return false;
            }
            if (hora == "") {
                alert("Por favor seleccione una hora.");
                return false;
            }
            if (nhoras == "") {
                alert("Por favor seleccione la cantidad de horas que quiera reservar.");
                return false;
            }
        }
    </script>
    <div class="container-fluid">
        <div class="row">
            <%- include("../templates/sidebar.ejs",{array: [{ "text" : "Admin" , "href" : "/admin" },
                {"text": "Reservas" , "href" : "/reservas" }]}) %>
                <main role="main" class="ml-sm-auto col-lg-10 pt-3 px-4 mt-5">
                    <!DOCTYPE html>
                    <html>

                    <head>
                        <meta charset="utf-8">
                        <meta http-equiv="X-UA-Compatible" content="IE=edge">
                        <title>Reservation Form</title>
                        <meta name="viewport" content="width=device-width, initial-scale=1">
                        <link rel="stylesheet" href="main.css">
                    </head>

                    <body>

                        <section class="banner">
                            <h1>Reservas
                            </h1>
                            <br>
                            <div>
                                <form name="reservar" onsubmit="return validateForm()" method="POST" action="/reservas">
                                    <div class="form-group">
                                        <div class="col-md-3 mb-3">
                                            <label for="nombre">Nombre asociado a la reserva:</label>
                                            <input type="text" class="form-control" id="nombre" name="nombre">

                                            <label for="depto">Departamento:</label>
                                            <input type="text" class="form-control" id="depto" name="depto">

                                            <label for="espacio">Espacio común:</label>
                                            <select class="custom-select" name="espacio" id="espacio">
                                                <option value="">Seleccione el espacio</option>
                                                <option value="Gimnasio">Gimnasio</option>
                                                <option value="Quincho">Quincho</option>
                                                <option value="Sala de eventos">Sala de eventos</option>
                                                <option value="Cancha de tenis">Cancha de tenis</option>
                                            </select>

                                            <label for="dia">Dia de la semana:</label>
                                            <select class="custom-select" name="dia" id="dia">
                                                <option value="">Seleccione el dia</option>
                                                <option value="Lunes">Lunes</option>
                                                <option value="Martes">Martes</option>
                                                <option value="Miercoles">Miercoles</option>
                                                <option value="Jueves">Jueves</option>
                                                <option value="Viernes">Viernes</option>
                                                <option value="Sabado">Sabado</option>
                                                <option value="Domingo">Domingo</option>
                                            </select>

                                            <label for="hora">Hora del dia:</label>
                                            <select class="custom-select" name="hora" id="hora">
                                                <option value="">Seleccione la hora</option>
                                                <option value="8">8:00</option>
                                                <option value="9">9:00</option>
                                                <option value="10">10:00</option>
                                                <option value="11">11:00</option>
                                                <option value="12">12:00</option>
                                                <option value="13">13:00</option>
                                                <option value="14">14:00</option>
                                                <option value="15">15:00</option>
                                                <option value="16">16:00</option>
                                                <option value="17">17:00</option>
                                                <option value="18">18:00</option>
                                                <option value="19">19:00</option>
                                                <option value="20">20:00</option>
                                                <option value="21">21:00</option>
                                                <option value="22">22:00</option>
                                            </select>

                                            <label for="nhoras">¿Cuantas horas desea reservar el espacio?:</label>
                                            <select class="custom-select" name="nhoras" id="nhoras">
                                                <option value="">Seleccione la cantidad de horas</option>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                            </select>
                                        </div>
                                        <div class="form-row form-submit col-md-5">
                                            <input type="submit" class="btn btn-primary">
                                        </div>
                                </form>
                            </div>
        </div>
        </section>

        </body>

        </html>

        </main>
    </div>
    </div>
    <%- include('../templates/footer.ejs', {titleWeb: 'Comunidad Unida' }) %>